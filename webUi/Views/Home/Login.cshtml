@model LoginModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groupdp</title>    
    <link rel="stylesheet" href="~/content/bootstrap/dist/css/bootstrap.css">
</head>

<body>
    @await Html.PartialAsync("_navbar")
    <div class="container mt-4">
        <h2 class="text-center p-2">Giriş Yap</h2>
        <hr>
        <div class="message mt-2">
            @if (TempData["message"] != null)
            {
                <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
            }
        </div>
        <div class="row mt-5">
            <div class="col-9">            
                <form method="post" asp-controller="home" asp-action="login">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email adresi</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email">                    
                    </div>

                    <div class="form-group my-3">
                        <label for="exampleInputPassword1">Parola</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                    </div>
                    <div class="my-3">
                        <a href="~/home/register">Kayıt Ol</a>
                    </div>

                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>



</body>

</html>